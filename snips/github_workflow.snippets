snippet run_test_when_pull_request "basic action template"
name: Run Test when PR

on:
  pull_request:
    paths:
      - src/proj/**/*

jobs:
  test:
    name: Test proj
    runs-on: [ubuntu-22.04]
    timeout-minutes: 10
    steps:
      - uses: actions/checkout@v4
      - working-directory: src/proj
        run: bin/rails test
endsnippet

